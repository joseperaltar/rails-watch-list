<div class="container mt-5">
  <div class="d-flex justify-content-between">
    <h3>My lists</h3>
    <%= link_to new_list_path do%>
      <button class="btn btn-success p-2 text-white fw-bold">Create a new movie list</button>
    <% end %>
  </div>
  <% lists.each do |list| %>
    <%= link_to list_path(list), class: "text-decoration-none" do %>
      <div class="border border-1 shadow p-3 mt-3 d-flex justify-content-between align-items-center">
        <span class="text-black"><%= list.name %></span>
        <div>
          <%= link_to "Delete", list_path(list), class: "btn btn-danger p-2 text-white border border-0 rounded", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          <span class="btn bg-purple p-2 rounded text-white border border-0"><%= list.movies.size %> movie<%= list.movies.size == 1 ? "" : "s" %></span>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
