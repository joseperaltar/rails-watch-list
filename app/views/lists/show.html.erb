<div class="container d-flex flex-column mt-3">
  <div class="d-flex justify-content-between align-items-center">
    <h2 class=""><%= @list.name %></h2>
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-success p-2 text-white fw-bold" %>
  </div>
  <div class="row mt-5">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-3 position-relative">
        <%= image_tag bookmark.movie.poster_url, class: "overlay" %>
        <p class="m-0"><%= bookmark.movie.title %></p>
        <%= link_to(bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"})  do %>
          <i class="fa-solid fa-trash text-danger position-absolute top-0 m-1"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
