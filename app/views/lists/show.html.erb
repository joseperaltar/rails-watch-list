<div class="list_banner d-flex align-items-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 400 %>')">
  <h2 class="w-100 text-center text-white fw-bold"><%= @list.name %></h2>
</div>

<div class="container mt-3">
  <div class="row">
    <div class="row mt-5 col-9">
      <%= render "lists/empty", count: @list.bookmarks.size, message: "There's no movies here, try add one" %>
      <% @list.bookmarks.each do |bookmark| %>
        <%= render "lists/movie-card", bookmark: bookmark %>
      <% end %>
    </div>
    <div class="col-3">
      <%= render "lists/movie-form", list: @list, bookmark: @bookmark %>
    </div>
  </div>

  <hr>

  <h3 class="w-100 text-center">Leave a review about this list</h3>
  <div class="row mt-5">
    <div class="col-9 row">
      <%= render "lists/empty", count: @reviews.size, message: "There's no reviews here, try add one" %>
      <% @reviews.each do |review| %>
        <%= render "lists/review-card", review: review %>
      <% end %>
    </div>
    <div class="col-3">
      <%= render "lists/review-form", list: @list, review: @review %>
    </div>
  </div>
</div>
